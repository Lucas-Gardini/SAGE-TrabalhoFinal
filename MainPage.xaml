<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SAGE.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasBackButton="False"
    NavigationPage.HasNavigationBar="False">
    <Grid>

        <!--  Background Image  -->
        <Image
            Aspect="AspectFill"
            HorizontalOptions="FillAndExpand"
            Source="wave_background.png"
            VerticalOptions="FillAndExpand" />

        <StackLayout
            x:Name="AuthPage"
            Padding="20"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="CenterAndExpand">
            <Label
                FontSize="18"
                HorizontalOptions="Center"
                Text="SAGE - Sistema Acadêmico de Gestão Educacional"
                TextColor="Black" />

            <Label
                FontSize="16"
                HorizontalOptions="Center"
                Text="Login"
                TextColor="Black" />

            <Entry
                x:Name="UsernameEntry"
                Margin="0,20,0,10"
                FontSize="18"
                HorizontalOptions="FillAndExpand"
                Placeholder="Usuário" />

            <Entry
                x:Name="PasswordEntry"
                Margin="0,10,0,15"
                FontSize="18"
                HorizontalOptions="FillAndExpand"
                IsPassword="True"
                Placeholder="Senha" />

            <!--<HorizontalStackLayout Margin="0,5,0,10">
                <Label Text="Não tem uma conta?" TextDecorations="Underline" />
            </HorizontalStackLayout>-->

            <Button
                x:Name="AuthButton"
                Margin="0,0,0,10"
                Clicked="AuthButton_Clicked"
                FontSize="18"
                HorizontalOptions="FillAndExpand"
                Text="Entrar"
                TextColor="White" />

            <Button
                x:Name="ClearDBButton"
                BackgroundColor="red"
                Clicked="ClearDBButton_Clicked"
                FontSize="18"
                HorizontalOptions="FillAndExpand"
                Text="Limpar Banco de Dados"
                TextColor="White" />

        </StackLayout>
    </Grid>
</ContentPage>
