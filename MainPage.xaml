<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SAGE.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasBackButton="False"
    NavigationPage.HasNavigationBar="False"
    xmlns:extension ="clr-namespace:SAGE.Extension"
    BackgroundColor="{DynamicResource BackgroundColor}">

    <!--  Background Image  -->
        <!--<Image
            Aspect="AspectFill"
            HorizontalOptions="FillAndExpand"
            Source="wave_background.png"
            VerticalOptions="FillAndExpand" />-->

    <StackLayout
            x:Name="AuthPage"
            Padding="20"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="CenterAndExpand">

        <Label
                FontSize="24"
                HorizontalOptions="Center"
                Text="{extension:TranslateExtansion Key=welcome}"
                TextColor="{DynamicResource TextColor}" />

        <Label
                FontSize="14"
                HorizontalOptions="Center"
                Margin="0, 10, 0, 30"
                Text="{extension:TranslateExtansion Key=welcomeMsg}"
                TextColor="{DynamicResource TextColor}" />

        <Label
                FontSize="16"
                HorizontalOptions="Center"
                Margin="25"
                Text="Login"
                TextColor="{DynamicResource TextColor}" />

        <Entry
                x:Name="UsernameEntry"
                Margin="0,20,0,10"
                FontSize="12"
                ClearButtonVisibility="WhileEditing"
                BackgroundColor="SlateGray"
                IsTextPredictionEnabled="True"   
                PlaceholderColor="{StaticResource PlaceholderColor}"
                TextColor="White"
                ReturnType="Next"
                HorizontalOptions="FillAndExpand"
                Placeholder="{extension:TranslateExtansion Key=user}" />

        <Entry
                x:Name="PasswordEntry"
                Margin="0,10,0,15"
                Completed="AuthButton_Clicked"
                FontSize="12"
                ClearButtonVisibility="WhileEditing"
                BackgroundColor="SlateGray"
                PlaceholderColor="{StaticResource PlaceholderColor}"
                TextColor="White"
                HorizontalOptions="FillAndExpand"
                IsPassword="True"
                Placeholder="{extension:TranslateExtansion Key=password}"
                ReturnType="Done" />

        <HorizontalStackLayout HorizontalOptions="FillAndExpand">
            <CheckBox x:Name="RememberMeCheckBox" VerticalOptions="Center" />
            <Label
                    Text="{extension:TranslateExtansion Key=rememberMe}"
                    TextColor="{DynamicResource TextColor}"
                    VerticalOptions="Center" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Margin="0,5,0,10">
            <Button Text="{extension:TranslateExtansion Key=noAccount}" BackgroundColor="Transparent" TextColor="CornflowerBlue" x:Name="CreateNewAccountBtn"/>
        </HorizontalStackLayout>

        <Button
                x:Name="AuthButton"
                Margin="0,10,0,10"
                Clicked="AuthButton_Clicked"
                FontSize="14"
                HorizontalOptions="Center"
                WidthRequest="210"
                CornerRadius="20"
                Text="{extension:TranslateExtansion Key=enter}"
                TextColor="White" />

        <Button
                x:Name="ClearDBButton"
                BackgroundColor="red"
                Clicked="ClearDBButton_Clicked"
                FontSize="14"
                HorizontalOptions="Center"
                WidthRequest="210"
                CornerRadius="20"
                Text="{extension:TranslateExtansion Key=clearDB}"
                TextColor="White" />

    </StackLayout>
</ContentPage>
