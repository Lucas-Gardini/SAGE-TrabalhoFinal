<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SAGE.Pages.UsuariosPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="UsuariosPage">
    <VerticalStackLayout>
        <Label
            FontSize="Large"
            HorizontalOptions="Center"
            Text="Lista de UsuÃ¡rios"
            VerticalOptions="Center" />

        <CollectionView x:Name="UsuariosCollectionView" ItemsSource="{Binding Usuarios}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="{Binding Nome}" />
                        <Label Grid.Column="1" Text="{Binding Identificador}" />
                        <Label Grid.Column="2" Text="{Binding IsAdmin, StringFormat='Admin: {0}'}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
